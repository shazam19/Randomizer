@using Sz.Fe.Core.Picker

<EditForm Model=@_randomizee>
    <div>
        <div class="mb-3">
            <label class="form-label">Name*:</label>
            <input type="text" class="form-control" @ref=_nameInput @bind=_randomizee.Name />
        </div>
    
        <div class="mb-5">
            <label class="form-label">Description: </label>
            <input type="text" class="form-control" @bind=_randomizee.Description />
        </div>

        <div class="mb-3">
            <div class="row px-3">
              <button class="btn btn-secondary col-md-6 right-border-square" type="button">Upload Image</button>
              <button class="btn btn-secondary col-md-6 left-border-square" type="button" @onclick="ShowAvatars">Choose Avatar</button>
            </div>
        </div>

        <div class="row px-3 mt-5">
            <button class="btn btn-primary col-md-12" @onclick="AddName">Add Name</button>
        </div>
    </div>
</EditForm>

@if (_showAvatars)
{
    <div class="popup-background">
        <div class="popup-content">
            <div class="container">
                <div class="row">
                    <ImagePicker ImageUrls=@_avatarUrls
                             OnImageSelected="OnImageSelected"
                             @ref="_imagePicker" />
                </div>
                <div class="row mt-3">
                    <button class="btn btn-primary" @onclick="HideAvatars">Done</button>
                </div>
            </div>
        </div>
    </div>
}



