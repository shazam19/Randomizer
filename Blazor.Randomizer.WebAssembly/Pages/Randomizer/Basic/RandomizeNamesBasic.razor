@page "/names-basic"
@using Blazor.Randomizer.WebAssembly.Pages.Randomizer
@inherits RandomizeNamesBase

<h3>RandomizeNames</h3>


<div class="container">
    <div class="row" >
        <div class="col-xs-6 col-md-6 mt-sm-5" >
            <EditForm Model=@_viewModel OnValidSubmit="AddNameSubmit">
                <input @bind=nameToAdd @ref="nameInput" @onkeydown="OnNameToAddKeyDown" class="@nameClass" />
                <button class="btn btn-primary" @onclick="AddName">Add name</button>
            </EditForm>

            @if(_viewModel.Randomizees.Count > 1)
            {
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-xs-6 col-md-9">
                            <button class="btn btn-primary btn-lg" @onclick="PickRandomName">Give Me a Name</button>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-xs-6 col-md-9">
                            <input @bind=randomName readonly="readonly" class="@nameClass input-group-text"/>
                        </div>
                    </div>
               </div>
            }
        </div>

        <div class="col-xs-6 col-md-6 mt-sm-5">
            <div class="container nameList">
            @foreach (var randomizee in _viewModel.Randomizees)
            {
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-6">
                        @randomizee.Name
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-link" @onclick="@(x => DeleteName(randomizee.Id))">X</button>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</div>

